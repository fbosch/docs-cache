{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"properties": {
		"$schema": {
			"type": "string",
			"minLength": 1
		},
		"cacheDir": {
			"type": "string",
			"minLength": 1
		},
		"targetMode": {
			"type": "string",
			"enum": ["symlink", "copy"]
		},
		"defaults": {
			"type": "object",
			"properties": {
				"ref": {
					"type": "string",
					"minLength": 1
				},
				"mode": {
					"type": "string",
					"enum": ["materialize"]
				},
				"include": {
					"minItems": 1,
					"type": "array",
					"items": {
						"type": "string",
						"minLength": 1
					}
				},
				"exclude": {
					"type": "array",
					"items": {
						"type": "string",
						"minLength": 1
					}
				},
				"targetMode": {
					"type": "string",
					"enum": ["symlink", "copy"]
				},
				"required": {
					"type": "boolean"
				},
				"maxBytes": {
					"type": "number",
					"minimum": 1
				},
				"maxFiles": {
					"type": "number",
					"minimum": 1
				},
				"allowHosts": {
					"minItems": 1,
					"type": "array",
					"items": {
						"type": "string",
						"minLength": 1
					}
				},
				"toc": {
					"anyOf": [
						{
							"type": "boolean"
						},
						{
							"type": "string",
							"enum": ["tree", "compressed"]
						}
					]
				},
				"unwrapSingleRootDir": {
					"type": "boolean"
				}
			},
			"additionalProperties": false
		},
		"sources": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string",
						"minLength": 1
					},
					"repo": {
						"type": "string",
						"minLength": 1
					},
					"targetDir": {
						"type": "string",
						"minLength": 1
					},
					"targetMode": {
						"type": "string",
						"enum": ["symlink", "copy"]
					},
					"ref": {
						"type": "string",
						"minLength": 1
					},
					"mode": {
						"type": "string",
						"enum": ["materialize"]
					},
					"include": {
						"type": "array",
						"items": {
							"type": "string",
							"minLength": 1
						}
					},
					"exclude": {
						"type": "array",
						"items": {
							"type": "string",
							"minLength": 1
						}
					},
					"required": {
						"type": "boolean"
					},
					"maxBytes": {
						"type": "number",
						"minimum": 1
					},
					"maxFiles": {
						"type": "number",
						"minimum": 1
					},
					"integrity": {
						"type": "object",
						"properties": {
							"type": {
								"type": "string",
								"enum": ["commit", "manifest"]
							},
							"value": {
								"anyOf": [
									{
										"type": "string"
									},
									{
										"type": "null"
									}
								]
							}
						},
						"required": ["type", "value"],
						"additionalProperties": false
					},
					"toc": {
						"anyOf": [
							{
								"type": "boolean"
							},
							{
								"type": "string",
								"enum": ["tree", "compressed"]
							}
						]
					},
					"unwrapSingleRootDir": {
						"type": "boolean"
					}
				},
				"required": ["id", "repo"],
				"additionalProperties": false
			}
		}
	},
	"required": ["sources"],
	"additionalProperties": false
}
