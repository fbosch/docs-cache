{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "Docs Cache Config",
	"type": "object",
	"additionalProperties": false,
	"required": ["sources"],
	"properties": {
		"$schema": {
			"type": "string",
			"minLength": 1
		},
		"cacheDir": {
			"type": "string",
			"minLength": 1,
			"default": ".docs"
		},
		"targetMode": {
			"type": "string",
			"enum": ["symlink", "copy"]
		},
		"defaults": {
			"type": "object",
			"additionalProperties": false,
			"required": [],
			"properties": {
				"ref": {
					"type": "string",
					"minLength": 1,
					"default": "HEAD"
				},
				"mode": {
					"type": "string",
					"enum": ["materialize", "sparse"],
					"default": "materialize"
				},
				"include": {
					"type": "array",
					"minItems": 1,
					"default": [
						"**/*.{md,mdx,markdown,mkd,txt,rst,adoc,asciidoc}",
						"README*",
						"LICENSE*"
					],
					"items": {
						"type": "string",
						"minLength": 1
					}
				},
				"targetMode": {
					"type": "string",
					"enum": ["symlink", "copy"]
				},
				"depth": {
					"type": "number",
					"minimum": 1,
					"default": 1
				},
				"required": {
					"type": "boolean",
					"default": true
				},
				"maxBytes": {
					"type": "number",
					"minimum": 1,
					"default": 200000000
				},
				"allowHosts": {
					"type": "array",
					"minItems": 1,
					"default": ["github.com", "gitlab.com"],
					"items": {
						"type": "string",
						"minLength": 1
					}
				}
			}
		},
		"sources": {
			"type": "array",
			"items": {
				"type": "object",
				"additionalProperties": false,
				"required": ["id", "repo"],
				"properties": {
					"id": {
						"type": "string",
						"minLength": 1
					},
					"repo": {
						"type": "string",
						"minLength": 1
					},
					"targetDir": {
						"type": "string",
						"minLength": 1
					},
					"targetMode": {
						"type": "string",
						"enum": ["symlink", "copy"]
					},
					"ref": {
						"type": "string",
						"minLength": 1
					},
					"mode": {
						"type": "string",
						"enum": ["materialize", "sparse"]
					},
					"depth": {
						"type": "number",
						"minimum": 1
					},
					"include": {
						"type": "array",
						"items": {
							"type": "string",
							"minLength": 1
						}
					},
					"exclude": {
						"type": "array",
						"items": {
							"type": "string",
							"minLength": 1
						}
					},
					"required": {
						"type": "boolean"
					},
					"maxBytes": {
						"type": "number",
						"minimum": 1
					},
					"integrity": {
						"type": "object",
						"additionalProperties": false,
						"required": ["type", "value"],
						"properties": {
							"type": {
								"type": "string",
								"enum": ["commit", "manifest"]
							},
							"value": {
								"type": ["string", "null"]
							}
						}
					}
				}
			}
		}
	}
}
