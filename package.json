{
	"name": "docs-cache",
	"private": false,
	"type": "module",
	"version": "0.1.0",
	"packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
	"description": "CLI for deterministic local caching of documentation repositories.",
	"author": "Frederik Bosch",
	"license": "MIT",
	"sideEffects": false,
	"engines": {
		"node": ">=18"
	},
	"bin": {
		"docs-cache": "./bin/docs-cache.mjs"
	},
	"files": [
		"bin",
		"dist"
	],
	"scripts": {
		"build": "unbuild",
		"dev": "unbuild --stub",
		"lint": "biome check .",
		"prepublishOnly": "pnpm audit --audit-level=high && pnpm build && pnpm schema:build",
		"release": "bumpp && npm publish",
		"test": "pnpm build && node --test",
		"test:coverage": "pnpm build && c8 --include dist --exclude bin --reporter=text node --test",
		"schema:build": "node scripts/generate-schema.mjs",
		"size": "pnpm run build && size-limit",
		"test:watch": "node --test --watch",
		"typecheck": "tsc --noEmit",
		"prepare": "simple-git-hooks"
	},
	"dependencies": {
		"cac": "^6.7.14",
		"@clack/prompts": "^1.0.0",
		"fast-glob": "^3.3.2",
		"picocolors": "^1.1.1",
		"picomatch": "^2.3.1",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@size-limit/file": "^11.2.0",
		"@types/node": "^24.2.1",
		"bumpp": "^10.3.2",
		"c8": "^10.1.3",
		"jiti": "^2.5.1",
		"lint-staged": "^16.2.7",
		"simple-git-hooks": "^2.13.1",
		"size-limit": "^11.2.0",
		"typescript": "^5.9.3",
		"unbuild": "^3.6.1"
	},
	"size-limit": [
		{
			"path": "dist/cli.mjs",
			"limit": "10 kB"
		}
	],
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write --no-errors-on-unmatched"
		]
	}
}
