{
	"name": "docs-cache",
	"private": false,
	"type": "module",
	"version": "0.1.0",
	"packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
	"description": "Deterministic, local cache of documentation repositories.",
	"author": "Frederik Bosch",
	"license": "MIT",
	"sideEffects": false,
	"engines": {
		"node": ">=18"
	},
	"bin": {
		"docs-cache": "./dist/cli/index.cjs"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "unbuild",
		"dev": "unbuild --stub",
		"lint": "biome check .",
		"prepublishOnly": "pnpm build",
		"release": "bumpp && npm publish",
		"test": "node --test",
		"test:watch": "node --test --watch",
		"typecheck": "tsc --noEmit",
		"prepare": "simple-git-hooks"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/node": "^24.2.1",
		"bumpp": "^10.3.2",
		"lint-staged": "^16.2.7",
		"size-limit": "^11.2.0",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3",
		"unbuild": "^3.6.1"
	},
	"size-limit": [
		{
			"path": "dist/cli.cjs",
			"limit": "10 KB"
		}
	],
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write --no-errors-on-unmatched"
		]
	}
}
